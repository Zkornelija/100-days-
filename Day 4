Task #4
rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡

pasirinkimas = input("Choose rock - 0, paper - 1 scissors - 2?").lower()
print(pasirinkimas)
if pasirinkimas == "0" :
  print(rock)
elif pasirinkimas == "1":
  print(paper)
elif pasirinkimas == "2":
  print(scissors)
else:
  print("OBEY RULES")

print("Computer choose:")
import random
random_kompiuterio = str(random.randint(0, 2))
if random_kompiuterio == "0" :
  print(rock)
elif random_kompiuterio == "1":
  print(paper)
elif random_kompiuterio == "2":
  print(scissors)

random_kompiuterio = int(random_kompiuterio)
pasirinkimas = int(pasirinkimas)


#0 laimi pries 2 pralaimi pries 1
if ((pasirinkimas == 0) and (random_kompiuterio == 0)):
  print("It's a draw")
elif (pasirinkimas == 0 and random_kompiuterio==1):
  print("You loose")
elif (pasirinkimas == 0 and random_kompiuterio == 2):
  print("You win")

#1 laimi pries 0 pralaimi pries 2
if pasirinkimas == 1 and random_kompiuterio == 1:
  print("It's a draw")
elif pasirinkimas == 1 and random_kompiuterio == 2:
  print("You Loose")
elif pasirinkimas == 1 and random_kompiuterio == 0:
  print("You win")

#2 laimi pries 1 pralaimi pries 0
if pasirinkimas == 2 and random_kompiuterio == 2:
  print("It's a draw")
elif pasirinkimas == 2 and random_kompiuterio == 0:
  print("You loose")
elif pasirinkimas == 2 and random_kompiuterio == 1:
  print("You win")
